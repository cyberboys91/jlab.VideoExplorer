<resources>
    <style name="AppDefaultTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="AppVideoTheme" parent="AppDefaultTheme.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red_bright</item>
    </style>
    <style name="AppAudioTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow_bright</item>
    </style>
    <style name="AppImageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
    </style>
    <style name="AppDocumentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
        <item name="colorAccent">@color/gray_bright</item>
    </style>
    <style name="AppDownloadTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange_dark</item>
        <item name="colorAccent">@color/orange_bright</item>
    </style>
    <style name="AppDefaultTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppDefaultTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppDefaultTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="VideoExplorerTheme" parent="AppDefaultTheme">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AudioPlayerTheme" parent="AppDefaultTheme">
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="ToolBarApparence" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/short_margin</item>
    </style>
    <style name="NavigationButtonPathStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">@dimen/navigation_button_path</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:color">@color/accent</item>
    </style>
    <style name="ProgressBarSpecialDir" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_accent</item>
        <item name="android:background">@drawable/progress_background</item>
    </style>
    <style name="ProgressBarVertical" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_vertical</item>
    </style>
</resources>
