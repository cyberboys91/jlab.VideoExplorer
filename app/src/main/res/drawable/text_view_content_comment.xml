<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:endColor="#53000000"
                android:centerColor="#24ffffff"
                android:startColor="#00000000"
                android:centerY="0"
                android:centerX="0.5"
                android:angle="90"/>
        </shape>
    </item>

    <item android:top="1dp"
        android:left="1dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>